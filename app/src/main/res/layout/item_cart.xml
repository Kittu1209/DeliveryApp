<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="10dp"
    android:background="@android:color/white"
    android:elevation="4dp"
    android:layout_margin="8dp">

    <!-- Product Image -->
    <ImageView
        android:id="@+id/imageViewCartProduct"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"/>

    <!-- Product Details -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="10dp">

        <!-- Product Name -->
        <TextView
            android:id="@+id/textViewCartProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"/>

        <!-- Product Price -->
        <TextView
            android:id="@+id/textViewCartProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â‚¹0.00"
            android:textSize="14sp"
            android:textColor="@android:color/holo_red_dark"/>

        <!-- Quantity Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Decrease Button -->
            <Button
                android:id="@+id/buttonDecreaseQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="-" />

            <!-- Quantity Text -->
            <TextView
                android:id="@+id/textViewCartProductQuantity"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="1"
                android:textSize="16sp"
                android:textStyle="bold"/>

            <!-- Increase Button -->
            <Button
                android:id="@+id/buttonIncreaseQuantity"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:text="+" />
        </LinearLayout>

        <!-- Remove Button -->
        <Button
            android:id="@+id/buttonRemoveItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Remove"
            android:textColor="@android:color/white"
            android:background="@android:color/holo_red_dark"
            android:padding="8dp"/>
    </LinearLayout>

</LinearLayout>
