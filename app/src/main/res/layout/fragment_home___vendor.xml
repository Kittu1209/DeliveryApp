<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment_container"
    android:padding="16dp"
    tools:context=".Home_Fragment_Vendor">
 <ToggleButton
     android:id="@+id/toggleMute"
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textOn="ðŸ”” On"
     android:textOff="ðŸ”• Off"
     android:layout_gravity="end"
     android:layout_marginBottom="8dp"/>

 <ScrollView
     android:id="@+id/scrollViewHome"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <LinearLayout
      android:id="@+id/layoutMainContainer"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="vertical"
      android:paddingBottom="16dp">

   <!-- Manage Orders Card -->
   <androidx.cardview.widget.CardView
       android:id="@+id/cardManageOrders"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="12dp"
       app:cardElevation="4dp">

    <LinearLayout
        android:id="@+id/layoutManageOrders"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

     <TextView
         android:id="@+id/textManageOrdersTitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Manage Orders"
         android:textSize="18sp"
         android:textColor="@android:color/black"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/textManageOrdersSubtitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="VIEW ORDERS"
         android:textSize="14sp"
         android:textColor="@android:color/darker_gray"
         android:layout_marginTop="8dp" />

    </LinearLayout>
   </androidx.cardview.widget.CardView>

   <!-- Menu Items Card -->
   <androidx.cardview.widget.CardView
       android:id="@+id/cardMenuItems"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginBottom="16dp"
       app:cardCornerRadius="12dp"
       app:cardElevation="4dp"
       android:backgroundTint="#E3F2FD">

    <LinearLayout
        android:id="@+id/layoutMenuItems"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

     <TextView
         android:id="@+id/textMenuItemsTitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Menu Items"
         android:textSize="18sp"
         android:textColor="@android:color/black"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/textMenuItemsCount"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="58"
         android:textSize="24sp"
         android:textColor="@android:color/black"
         android:textStyle="bold"
         android:layout_marginTop="8dp" />

    </LinearLayout>
   </androidx.cardview.widget.CardView>

   <!-- Earnings Card -->
   <androidx.cardview.widget.CardView
       android:id="@+id/cardEarnings"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       app:cardCornerRadius="12dp"
       app:cardElevation="4dp"
       android:backgroundTint="#E8F5E9">

    <LinearLayout
        android:id="@+id/layoutEarnings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

     <TextView
         android:id="@+id/textEarningsTitle"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="Earnings"
         android:textSize="18sp"
         android:textColor="@android:color/black"
         android:textStyle="bold" />

     <TextView
         android:id="@+id/textEarningsAmount"
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:text="â‚¹ 15,230"
         android:textSize="24sp"
         android:textColor="@android:color/black"
         android:textStyle="bold"
         android:layout_marginTop="8dp" />

    </LinearLayout>
   </androidx.cardview.widget.CardView>

  </LinearLayout>
 </ScrollView>

</FrameLayout>
