<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    android:clickable="true"
    android:focusable="true"
    android:backgroundTint="@color/light_yellow">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="18dp"
        android:background="?android:attr/selectableItemBackground">

        <!-- Header Row: Name and Status -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/staffName"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:text="Name: KKR"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/dark_brown" />

            <TextView
                android:id="@+id/status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textSize="14sp"
                android:textStyle="bold"
                android:textColor="@android:color/holo_green_dark"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:background="@drawable/status_background" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginVertical="8dp"
            android:background="#CCCCCC" />

        <!-- Detail Rows -->
        <TextView
            android:id="@+id/staffEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email: example@gmail.com"
            android:textColor="@color/dark_brown"
            android:textSize="17sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/staffPhone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Phone: 9876543210"
            android:textColor="@color/dark_brown"
            android:textSize="17sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/staffID"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Staff ID: UID12345"
            android:textColor="@color/dark_brown"
            android:textSize="17sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/currentDuty"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Current Duty: Not Available"
            android:textColor="#FF9800"
            android:textSize="17sp"
            android:layout_marginBottom="4dp" />

        <TextView
            android:id="@+id/licenseNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="License No: XYZ123456"
            android:textColor="@color/dark_brown"
            android:textSize="17sp" />

    </LinearLayout>
</androidx.cardview.widget.CardView>
