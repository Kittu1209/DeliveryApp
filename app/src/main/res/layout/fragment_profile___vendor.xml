<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:orientation="vertical"
    android:background="@drawable/fgprofile">

    <!-- CardView for Profile Details -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginTop="180dp"
        app:cardCornerRadius="12dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="488dp"
            android:orientation="vertical"
            android:padding="20dp">

            <EditText
                android:id="@+id/name_v"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/editbox_background"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="NAME"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/email_v"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/editbox_background"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="E-MAIL"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/phone_v"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/editbox_background"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="PHONE NO"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <EditText
                android:id="@+id/shopname_v"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="10dp"
                android:background="@android:drawable/editbox_background"
                android:focusable="false"
                android:gravity="center_vertical"
                android:hint="SHOP NAME"
                android:padding="10dp"
                android:textColor="@color/black"
                android:textSize="16sp" />


        </LinearLayout>

        <!-- Buttons Section -->
        <Button
            android:id="@+id/change_pass_btn_v"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="Change Password"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_200"
            android:textColor="@android:color/white"
            android:layout_marginTop="250dp"/>

        <Button
            android:id="@+id/edit_profile_btn_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:text="Edit Profile"
            android:textSize="20sp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_200"
            android:textColor="@android:color/white"
            android:layout_marginTop="310dp"/>

        <Button
            android:id="@+id/save_btn_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Save Changes"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_200"
            android:textColor="@android:color/white"
            android:layout_marginTop="370dp"/>
        <Button
            android:id="@+id/add_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Add Address"
            android:textSize="20sp"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:textStyle="bold"
            android:backgroundTint="@color/purple_200"
            android:textColor="@android:color/white"
            android:layout_marginTop="430dp"/>
    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/log_out__vendor_btn"
        android:layout_width="387dp"
        android:layout_height="49dp"
        android:text="Logout"
        />

</LinearLayout>
