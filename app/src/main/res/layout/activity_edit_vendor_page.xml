<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/yellow"
    android:padding="16dp">

    <!-- Title -->
    <TextView
        android:id="@+id/tvEditVendorTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Edit Vendor"
        android:textSize="32sp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:gravity="center_horizontal"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="16dp"/>

    <!-- Card with Fields -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardVendorInfo"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        android:layout_marginTop="80dp"
        app:cardElevation="8dp"
        app:layout_constraintTop_toBottomOf="@id/tvEditVendorTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <EditText
                    android:id="@+id/editVendorName"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Vendor Name"
                    android:textColor="@color/dark_brown"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@color/light_yellow"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/editVendorId"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Vendor ID"
                    android:textColor="@color/dark_brown"
                    android:inputType="textPersonName"
                    android:padding="12dp"
                    android:background="@color/light_yellow"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/editVendorEmail"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Vendor Email"
                    android:textColor="@color/dark_brown"
                    android:inputType="textEmailAddress"
                    android:padding="12dp"
                    android:background="@color/light_yellow"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/editVendorPhone"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Vendor Phone"
                    android:inputType="phone"
                    android:textColor="@color/dark_brown"
                    android:padding="12dp"
                    android:background="@color/light_yellow"
                    android:textSize="16sp"
                    android:layout_marginBottom="16dp" />

                <EditText
                    android:id="@+id/editVendorShop"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:hint="Shop Name"
                    android:inputType="text"
                    android:textColor="@color/dark_brown"
                    android:padding="12dp"
                    android:background="@color/light_yellow"
                    android:textSize="16sp"
                    android:layout_marginBottom="24dp" />

                <Button
                    android:id="@+id/btnSaveVendor"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Save"
                    android:textSize="20sp"
                    android:backgroundTint="@color/dark_orange"
                    android:textColor="#FFFFFF"
                    android:padding="12dp"
                    android:layout_marginTop="8dp" />
            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
