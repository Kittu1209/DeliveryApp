<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    card_view:cardCornerRadius="12dp"
    card_view:cardElevation="6dp"
    android:padding="12dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/adminOrderImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:scaleType="centerCrop"
            android:layout_marginEnd="12dp"
            android:background="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/adminOrderId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Order ID: order_123"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/adminOrderItem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Item: Almond"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/adminOrderPrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Price: â‚¹100"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/adminOrderQuantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: 1"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/adminOrderStudentName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Student: Krishma"
                android:textSize="16sp"
                android:textColor="#000000" />

            <TextView
                android:id="@+id/adminOrderAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address: Room 46, Hostel Chaityam"
                android:textSize="15sp"
                android:textColor="#444444" />

            <TextView
                android:id="@+id/adminOrderStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Status: Pending"
                android:textStyle="bold"
                android:textSize="15sp"
                android:textColor="#D32F2F" />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>
