<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    android:backgroundTint="@color/light_yellow"
    app:cardElevation="6dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/textVendorName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Name"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="@color/dark_brown" />

        <TextView
            android:id="@+id/textVendorEmail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Email"
            android:textSize="18sp"
            android:textColor="@color/dark_brown" />

        <TextView
            android:id="@+id/textVendorPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor Phone"
            android:textSize="18sp"
            android:textColor="@color/dark_brown" />

        <TextView
            android:id="@+id/textVendorId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vendor ID"
            android:textSize="18sp"
            android:textColor="@color/dark_brown" />

        <TextView
            android:id="@+id/textShopName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Shop Name"
            android:textSize="18sp"
            android:textColor="@color/dark_brown" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:gravity="end">

            <Button
                android:id="@+id/btnEditVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Edit"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#FF9800"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/btnDeleteVendor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:backgroundTint="#F44336"
                android:textColor="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>
